---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, tags, category } = post.data;
---

<li
  class="post-card group"
  data-category={category ?? ""}
  data-tags={tags.join(",")}
>
  <a
    href={`/blog/${post.id}`}
    class="block rounded-lg border border-stone-200 bg-white p-6 hover:-translate-y-[3px] hover:shadow-sm hover:border-stone-400/60 dark:border-gray-800 dark:bg-gray-900/50 dark:hover:shadow-sm dark:hover:border-stone-400/60 transition-all duration-200"
    tabindex="-1"
    aria-hidden="true"
  >
    <article aria-label={title}>
      <div class="mb-2 flex flex-wrap items-center gap-2">
        {category && (
          <span class="rounded border border-stone-600/30 bg-stone-600/10 px-2 py-0.5 text-xs font-medium text-stone-700 dark:border-stone-400/30 dark:bg-stone-400/10 dark:text-stone-400">
            {category}
          </span>
        )}
        <time
          datetime={pubDate.toISOString()}
          class="text-xs text-stone-400 dark:text-gray-500"
        >
          {pubDate.toLocaleDateString("ko-KR", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })}
        </time>
      </div>
      <h2 class="text-lg font-semibold text-stone-900 group-hover:text-stone-700 dark:text-gray-100 dark:group-hover:text-stone-400 transition-colors">
        {title}
      </h2>
      <p class="mt-2 text-sm leading-relaxed text-stone-500 dark:text-gray-400">
        {description}
      </p>
      {tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="rounded-full bg-stone-100 px-2.5 py-0.5 text-xs text-stone-500 dark:bg-gray-800 dark:text-gray-500">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </article>
  </a>
</li>
